<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorThemeLightGreen</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/poppins__medium</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/bg_gradient</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
    <!-- Splash theme. -->
    <style name="SplashTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>
    <!-- Profile theme. -->
    <style name="ProfileTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#FFEEE9</item>
    </style>

    <!-- Home theme. -->
    <style name="HomeTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">#5C5C5C</item>
    </style>


    <style name="DefaultButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorThemeLightGreen</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="DefaultEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textColor">@color/colorThemeLightGreen</item>
        <item name="android:textColorHint">@color/colorThemeLightGreen</item>
        <item name="android:textSize">13dp</item>

    </style>


    <!-- Calendar -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorThemeRoyalBlue</item>
        <item name="colorControlActivated">@color/colorThemeOrange</item>
        <item name="android:textColorPrimaryInverse">@color/colorWhite</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/colorThemeRoyalBlue</item>
        <item name="fontFamily">@font/poppins__medium</item>
    </style>

    <style name="CalenderViewDateCustomText">

        <item name="android:textColor">@color/colorThemeRoyalBlue</item>
        <item name="fontFamily">@font/poppins__medium</item>
    </style>

</resources>