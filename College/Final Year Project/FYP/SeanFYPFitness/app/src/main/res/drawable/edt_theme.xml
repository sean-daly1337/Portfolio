<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_focused="true">


        <layer-list>

            <item android:height="47dp">
                <shape android:padding="20dp" android:shape="rectangle">
                    <solid android:color="#353535" />
                    <size android:height="47dp" />
                    <stroke android:width="1dp" android:color="@color/colorThemeLightGrey" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <item android:width="23dp" android:height="23dp" android:end="19dp" android:gravity="end|center_vertical">
                <shape android:shape="oval">
                    <solid android:color="#ffff" />
                    <stroke android:width="1dp" android:color="#292929" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="20dp" android:shape="rectangle">
            <size android:height="47dp" />
            <solid android:color="#292929" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>